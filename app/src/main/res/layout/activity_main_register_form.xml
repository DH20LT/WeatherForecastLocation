<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".MainActivityLoginForm">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/left" />

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/background_for_login">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/geomanist_medium"
                android:text="Đăng ký"
                android:textColor="#24609B"
                android:textSize="25dp" />

            <RelativeLayout
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="1dp">

                <ImageView
                    android:id="@+id/img_user_for_register"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/userinfoforlogin3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/img_user_for_register"
                    android:fontFamily="@font/geomanist_light"
                    android:text="Nickname"
                    android:textColor="#24609B"
                    android:textFontWeight="700"
                    android:textSize="16dp" />

            </RelativeLayout>


            <EditText
                android:id="@+id/editUsernameRegister"
                android:layout_width="260dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/background_editted_for_login"
                android:fontFamily="@font/geomanist_regular"
                android:hint="Nhập nickname"
                android:paddingLeft="10dp"
                android:textSize="14dp" />

            <RelativeLayout
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="1dp">

                <ImageView
                    android:id="@+id/img_email_for_register"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="1dp"
                    android:src="@drawable/email" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/img_email_for_register"
                    android:fontFamily="@font/geomanist_light"
                    android:text="Email"
                    android:textColor="#24609B"
                    android:textFontWeight="700"
                    android:textSize="16dp" />

            </RelativeLayout>

            <EditText
                android:id="@+id/editEmailRegister"
                android:layout_width="260dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/background_editted_for_login"
                android:fontFamily="@font/geomanist_regular"
                android:hint="Nhập email"
                android:paddingLeft="10dp"
                android:textSize="14dp" />

            <RelativeLayout
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="1dp">

                <ImageView
                    android:id="@+id/img_password_for_register"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="1dp"
                    android:src="@drawable/password" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/img_password_for_register"
                    android:fontFamily="@font/geomanist_light"
                    android:text="Mật khẩu"
                    android:textColor="#24609B"
                    android:textFontWeight="700"
                    android:textSize="16dp" />

            </RelativeLayout>

            <EditText
                android:id="@+id/editPasswordRegister"
                android:layout_width="260dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/background_editted_for_login"
                android:fontFamily="@font/geomanist_regular"
                android:hint="Nhập mật khẩu"
                android:paddingLeft="10dp"
                android:textSize="14dp" />

            <RelativeLayout
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="1dp">

                <ImageView
                    android:id="@+id/img_confirm_password_for_register"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="1dp"
                    android:src="@drawable/password" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/img_confirm_password_for_register"
                    android:fontFamily="@font/geomanist_light"
                    android:text="Xác nhận mật khẩu"
                    android:textColor="#24609B"
                    android:textFontWeight="700"
                    android:textSize="16dp" />

            </RelativeLayout>


            <EditText
                android:id="@+id/editPasswordConfirmRegister"
                android:layout_width="260dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/background_editted_for_login"
                android:fontFamily="@font/geomanist_regular"
                android:hint="Nhập lại mật khẩu"
                android:paddingLeft="10dp"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/btnRegister"
                android:layout_width="260dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/background_for_login_button"
                android:fontFamily="@font/geomanist_light"
                android:gravity="center"
                android:text="Đăng ký"
                android:textColor="#24609B"
                android:textFontWeight="700"
                android:textSize="16dp" />


        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>